<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ndtp="clr-namespace:Maui.NullableDateTimePicker;assembly=Maui.NullableDateTimePicker"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:local="clr-namespace:Library.Pages.Author"
    xmlns:book="clr-namespace:Library.Pages.Book"
    xmlns:content="clr-namespace:Library.Pages.Book.Content"
    x:DataType="local:AuthorEditViewModel"
    x:Class="Library.Pages.Author.AuthorEditPage"
    x:Name="Page"
    Title="Редактирование автора">

    <Grid
        RowDefinitions="*, auto">

        <ScrollView
            Grid.Row="0"
            Padding="5">
            <VerticalStackLayout>
                <Border>
                    <VerticalStackLayout>
                        <Label
                            Text="Изображение"
                            Style="{StaticResource SubHeadline}" />

                        <Image
                            HeightRequest="200"
                            Aspect="AspectFit"
                            Source="{Binding Path=EditAuthor.ImagePath}">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Path=ImageMenuCommand}"
                                    NumberOfTapsRequired="2" />
                            </Image.GestureRecognizers>
                        </Image>
                    </VerticalStackLayout>
                </Border>

                <Border>
                    <VerticalStackLayout>
                        <Label
                            Text="Основные сведения"
                            Style="{StaticResource SubHeadline}" />

                        <Label
                            Text="ФИО:" />
                        <Entry
                            Text="{Binding Path=EditAuthor.Author.Name}" />

                        <Grid
                            ColumnDefinitions="*, *">

                            <VerticalStackLayout
                                Grid.Column="0">

                                <Label
                                    Text="Дата рождения:" />

                                <ndtp:NullableDateTimePicker
                                    SelectedDateTime="{Binding Path=EditAuthor.DateBirth, Mode=TwoWay}"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                    HideIcon="True"
                                    Mode="Date"/>

                            </VerticalStackLayout>

                            <VerticalStackLayout
                                Grid.Column="1">

                                <Label
                                    Text="Дата смерти:" />

                                <ndtp:NullableDateTimePicker
                                    SelectedDateTime="{Binding Path=EditAuthor.DateDeath, Mode=TwoWay}"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                    HideIcon="True"
                                    Mode="Date" />

                                <!--<HorizontalStackLayout>
                                    <CheckBox
                                        WidthRequest="30"
                                        IsChecked="{Binding Path=EditAuthor.IsDateDeathExist}" />

                                    <DatePicker
                                        IsEnabled="{Binding Path=EditAuthor.IsDateDeathExist}"
                                        Date="{Binding Path=EditAuthor.DateDeath}" />
                                </HorizontalStackLayout>-->                                
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <Border>
                    <VerticalStackLayout>
                        <Label
                            Text="Комментарий"
                            Style="{StaticResource SubHeadline}" />

                        <Editor
                            AutoSize="TextChanges"
                            Text="{Binding Path=EditAuthor.Author.Comment}" />
                    </VerticalStackLayout>
                </Border>

                <Border>
                    <toolkit:Expander>
                        <toolkit:Expander.Header>
                            <Grid
                                ColumnDefinitions="*, auto">

                                <Label
                                    Grid.Column="0"
                                    Text="Книги"
                                    Margin="0"
                                    Style="{StaticResource SubHeadline}">

                                    <Label.Triggers>
                                        <DataTrigger
                                            TargetType="Label"
                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type toolkit:Expander}}, x:DataType={x:Type toolkit:Expander}, Path=IsExpanded}"
                                            Value="True">

                                            <Setter
                                                Property="Margin"
                                                Value="0, 0, 0, 5" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>

                                <Label
                                    Grid.Column="1"
                                    VerticalTextAlignment="Center"
                                    Margin="0, 0, 10, 0"
                                    FontSize="16"
                                    Text="&#xf0d7;"
                                    FontFamily="FontAwesomeSolid">

                                    <Label.Triggers>
                                        <DataTrigger
                                            TargetType="Label"
                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type toolkit:Expander}}, x:DataType={x:Type toolkit:Expander}, Path=IsExpanded}"
                                            Value="True">

                                            <Setter
                                                Property="Text"
                                                Value="&#xf0d8;" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Grid>
                        </toolkit:Expander.Header>

                        <VerticalStackLayout>
                            <CollectionView
                                SelectionMode="None"
                                ItemsSource="{Binding Path=EditAuthor.Books}">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="book:BooksModel">
                                        <Border
                                            Padding="10, 5, 10, 5">

                                            <VerticalStackLayout>
                                                <Label
                                                    Grid.Column="1"
                                                    Grid.Row="0"
                                                    FontAttributes="Bold"
                                                    Text="{Binding Path=Book.Name}" />

                                                <Label
                                                    Grid.Column="1"
                                                    Grid.Row="1"
                                                    Text="{Binding Path=Authors}" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </toolkit:Expander>
                </Border>

                <Border>
                    <toolkit:Expander>
                        <toolkit:Expander.Header>
                            <Grid
                                ColumnDefinitions="*, auto">

                                <Label
                                    Grid.Column="0"
                                    Text="Произведения"
                                    Margin="0"
                                    Style="{StaticResource SubHeadline}">

                                    <Label.Triggers>
                                        <DataTrigger
                                            TargetType="Label"
                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type toolkit:Expander}}, x:DataType={x:Type toolkit:Expander}, Path=IsExpanded}"
                                            Value="True">

                                            <Setter
                                                Property="Margin"
                                                Value="0, 0, 0, 5" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>

                                <Label
                                    Grid.Column="1"
                                    VerticalTextAlignment="Center"
                                    Margin="0, 0, 10, 0"
                                    FontSize="16"
                                    Text="&#xf0d7;"
                                    FontFamily="FontAwesomeSolid">

                                    <Label.Triggers>
                                        <DataTrigger
                                            TargetType="Label"
                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type toolkit:Expander}}, x:DataType={x:Type toolkit:Expander}, Path=IsExpanded}"
                                            Value="True">

                                            <Setter
                                                Property="Text"
                                                Value="&#xf0d8;" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Grid>
                        </toolkit:Expander.Header>

                        <VerticalStackLayout>
                            <CollectionView
                                SelectionMode="None"
                                ItemsSource="{Binding Path=EditAuthor.Contents}">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate
                                        x:DataType="content:ContentsModel">
                                        
                                        <Border
                                            Padding="10, 5, 10, 5">

                                            <VerticalStackLayout>
                                                <Label
                                                    Grid.Column="1"
                                                    Grid.Row="0"
                                                    FontAttributes="Bold"
                                                    Text="{Binding Path=Content.Name}" />

                                                <Label
                                                    Grid.Column="1"
                                                    Grid.Row="1"
                                                    Text="{Binding Path=Authors}" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </toolkit:Expander>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <Button
            Grid.Row="1"
            Text="Сохранить"
            Margin="5"
            Command="{Binding Path=SaveAuthorCommand}" />
    </Grid>
</ContentPage>
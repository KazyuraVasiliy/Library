<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Library.Pages.Book.BooksPage"
    xmlns:local="clr-namespace:Library.Pages.Book"
    x:DataType="local:BooksViewModel"
    x:Name="Page"
    Title="Книги">

    <Grid
        RowDefinitions="auto, *">
        
        <SearchBar
            Grid.Row="0"
            x:Name="booksSearchBar"
            Margin="0, 0, 0, 5"
            Placeholder="Поиск книг"
            Text="{Binding Path=SearchBooksString}">

            <SearchBar.Behaviors>
                <toolkit:EventToCommandBehavior
                    BindingContext="{Binding Path=BindingContext, x:DataType={x:Type ContentPage}, Source={x:Reference Page}}"
                    Command="{Binding Path=SearchBooksCommand, x:DataType={x:Type local:BooksViewModel}}"
                    CommandParameter="{Binding Path=Text, x:DataType='SearchBar', Source={x:Reference booksSearchBar}}"
                    EventName="TextChanged" />
            </SearchBar.Behaviors>
        </SearchBar>
        
        <ListView
            Grid.Row="1"
            ItemsSource="{Binding Path=FilteredBooks}"
            CachingStrategy="RecycleElementAndDataTemplate"
            HasUnevenRows="True"
            SelectionMode="None"
            SeparatorVisibility="None"
            IsPullToRefreshEnabled="True"
            RefreshCommand="{Binding Path=RefreshCommand}"
            IsRefreshing="{Binding Path=IsRefreshing}">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:BooksModel">
                    <ViewCell>
                        <ViewCell.View>
                            <Border
                                Margin="5, 2.5, 5, 2.5">
                                
                                <Grid
                                    ColumnDefinitions="0.25*, *"
                                    RowDefinitions="1.5*, *">

                                    <Image
                                        Grid.Column="0"
                                        Grid.RowSpan="2"
                                        HeightRequest="40"
                                        Margin="0, 0, 0, 0"
                                        Source="{Binding Path=ImagePath}" />

                                    <Label
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        FontAttributes="Bold"
                                        Text="{Binding Path=Book.Name}" />

                                    <Label
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Text="{Binding Path=Authors}" />
                                </Grid>
                            </Border>
                        </ViewCell.View>
                        <ViewCell.ContextActions>
                            <MenuItem
                                Text="Изменить"
                                Command="{Binding Path=BindingContext.EditBookCommand, x:DataType={x:Type ContentPage}, Source={x:Reference Page}}"
                                CommandParameter="{Binding .}"
                                IsDestructive="True" />
                            <MenuItem
                                Text="Удалить"
                                Command="{Binding Path=BindingContext.RemoveBookCommand, x:DataType={x:Type ContentPage}, Source={x:Reference Page}}"
                                CommandParameter="{Binding .}"
                                IsDestructive="True" />
                        </ViewCell.ContextActions>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button
            Grid.RowSpan="2"
            HeightRequest="80"
            WidthRequest="80"
            CornerRadius="40"
            Padding="0"
            FontAttributes="Bold"
            FontSize="50"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="0, 0, 20, 20"
            Text="+"
            Command="{Binding Path=EditBookCommand}" />
    </Grid>

</ContentPage>
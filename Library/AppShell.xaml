<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Library.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Library"
    x:DataType="local:AppShellViewModel"
    xmlns:book="clr-namespace:Library.Pages.Book"
    xmlns:series="clr-namespace:Library.Pages.Series"
    xmlns:author="clr-namespace:Library.Pages.Author"
    xmlns:person="clr-namespace:Library.Pages.Person"
    Shell.FlyoutBehavior="Flyout"
    Title="Library">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Label
                Text="Library"
                FontSize="24"
                Padding="12"
                FontFamily="OpenSansRegular"
                TextColor="White"
                Background="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                HorizontalTextAlignment="Start"
                VerticalTextAlignment="Center" />
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <ShellContent
        Title="Книги"
        ContentTemplate="{DataTemplate book:BooksPage}">

        <ShellContent.Icon>
            <FontImageSource
                FontFamily="FontAwesomeSolid"
                Glyph="&#xf02d;"
                Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                Size="50" />
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Авторы"
        ContentTemplate="{DataTemplate author:AuthorsPage}">

        <ShellContent.Icon>
            <FontImageSource
                FontFamily="FontAwesomeSolid"
                Glyph="&#xf52d;"
                Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                Size="50" />
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Серии"
        ContentTemplate="{DataTemplate series:SeriesesPage}">

        <ShellContent.Icon>
            <FontImageSource
                FontFamily="FontAwesomeSolid"
                Glyph="&#xf0ca;"
                Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                Size="50" />
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Владельцы"
        ContentTemplate="{DataTemplate person:PersonsPage}">

        <ShellContent.Icon>
            <FontImageSource
                FontFamily="FontAwesomeSolid"
                Glyph="&#xf0c0;"
                Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                Size="50" />
        </ShellContent.Icon>
    </ShellContent>

    <MenuItem IsEnabled="False">
        <Shell.MenuItemTemplate>
            <DataTemplate>
                <Label
                    HeightRequest="1"
                    Margin="10, 0, 10, 0"
                    BackgroundColor="LightGray" />
            </DataTemplate>
        </Shell.MenuItemTemplate>
    </MenuItem>

    <MenuItem
        Text="Импорт"
        Command="{Binding Path=ImportCommand}">

        <MenuItem.IconImageSource>
            <FontImageSource
                FontFamily="FontAwesomeSolid"
                Glyph="&#xf56f;"
                Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                Size="50" />
        </MenuItem.IconImageSource>
    </MenuItem>

    <Shell.FlyoutFooter>
        <Label
            Margin="10"
            Text="{Binding Path=Version}" />
    </Shell.FlyoutFooter>    
</Shell>
